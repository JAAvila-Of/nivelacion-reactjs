{
  "name": "testeo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "tailwindcss": "^2.1.1",
    "web-vitals": "^1.1.1",
    "wouter": "^2.7.4"
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm run dev:css\" \"react-scripts start\"",
    "prestart": "tailwindcss build src/tailwind.css -o src/assets/tailwind.css",
    "dev": "concurrently --kill-others \"npm run build:css\" \"npm run start\"",
    "build": "react-scripts build",
    "prebuild": "npm run build:css",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "script:dev": "npm run build:css && react-scripts start",
    "build:css": "tailwindcss build src/tailwind.css -o public/assets/tailwind.css",
    "dev:css": "postcss src/tailwind.css -o src/assets/tailwind.css -w"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.0.2",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "tailwindcss-cli": "^0.1.2",
    "typescript": "^4.2.4"
  }
}
